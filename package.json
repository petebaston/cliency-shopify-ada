{
  "name": "shopify-discount-manager",
  "version": "1.0.0",
  "description": "Advanced Shopify discount management app with subscription support",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:unit": "jest server/tests/models server/tests/routes",
    "test:integration": "jest server/tests/integration",
    "test:e2e": "jest server/tests/integration/e2e.test.js",
    "migrate": "node server/database/migrate.js",
    "verify": "node scripts/verify-deployment.js",
    "build:prod": "bash scripts/build-production.sh",
    "audit": "npm audit --production"
  },
  "keywords": ["shopify", "discounts", "subscriptions"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@shopify/shopify-api": "^7.0.0",
    "@shopify/shopify-app-express": "^2.0.0",
    "@shopify/shopify-app-session-storage-postgresql": "^2.0.0",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "decimal.js": "^10.4.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}